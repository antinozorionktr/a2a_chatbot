# Use the official Python 3.13 image
FROM python:3.13-slim

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y build-essential curl

# Copy project files (including .env)
COPY . /app

# Install Python dependencies
RUN pip install --upgrade pip
RUN pip install -r requirements.txt

# Expose backend and frontend ports
EXPOSE 9998 9999 8501

# Entrypoint: start backend, wait for health, then launch frontend
CMD bash -c "\
    set -a && source .env && set +a && \
    python multi_agent.py both & \
    echo 'ü©∫ Waiting for backend to become healthy...' && \
    until curl -s http://localhost:9998/health > /dev/null && curl -s http://localhost:9999/health > /dev/null; do \
        echo '‚è≥ Waiting for backend services...'; \
        sleep 2; \
    done && \
    echo '‚úÖ Backend is healthy. Launching frontend...' && \
    streamlit run frontend.py --server.port=8501 --server.address=0.0.0.0"
