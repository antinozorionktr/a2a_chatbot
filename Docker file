# Use official Python 3.13 slim image
FROM python:3.13-slim

# Environment settings
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y build-essential curl jq

# Copy application code (including .env and requirements)
COPY . /app

# Install Python packages
RUN pip install --upgrade pip
RUN pip install -r requirements.txt

# Expose backend and frontend ports
EXPOSE 9998 9999 8501

# Entrypoint logic
CMD bash -c "\
    set -a && source .env && set +a && \
    echo '🚀 Starting backend agents...' && \
    python multi_agent.py both & \
    echo '⏳ Waiting for agents to become healthy...' && \
    until curl -s http://localhost:9998/health | jq -e '.status == \"ok\"' > /dev/null && \
          curl -s http://localhost:9999/health | jq -e '.status == \"ok\"' > /dev/null; do \
        echo '🔄 Still waiting for agents...'; sleep 2; \
    done && \
    echo '✅ Backend is healthy. Launching Streamlit frontend...' && \
    streamlit run frontend.py --server.port=8501 --server.address=0.0.0.0"
